<div class="banner" style="background-image: url(assets/images/main-banner.png);">
    <div class="container">
        <div class="row align-items-center">
            <div class="main-banner-con">
                <div class="banner-content">
                    <h5>{{ section.settings.sub_heading | escape }}</h5>
                    <h2>{{ section.settings.title | escape }}</h2>
                      {{ section.settings.content }}
                    <div class="banner-btn">
                        <a class="btn-1" href="{{ section.settings.button_left_link }}">{{ section.settings.button_left }}</a>
                        <a class="btn btn-2" href="{{ section.settings.button_right_link }}">{{ section.settings.button_right }}</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

{% schema %}
{
  "name": "Custom Banner",
  "tag": "section",
  "class": "announcement-bar-section",
  "settings": [
    {
      "type": "text",
      "id": "sub_heading",
      "default": "Collections",
      "label": "Sub Heading"
    },
    {
      "type": "text",
      "id": "title",
      "default": "Collections",
      "label": "Title"
    },
    {
      "type": "richtext",
      "id": "content",
      "default": "<p>Collections</p>",
      "label": "Content"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "t:sections.multicolumn.blocks.column.settings.image.label"
    },
    {
      "type": "text",
      "id": "button_left",
      "default": "Collections",
      "label": "Button Left Title"
    },
    {
      "type": "url",
      "id": "button_left_link",
      "label": "Button Left Link"
    },
    {
      "type": "text",
      "id": "button_right",
      "default": "Collections",
      "label": "Button Right Title"
    },
    {
      "type": "url",
      "id": "button_right_link",
      "label": "Button Right Link"
    }
],
"presets": [
    {
      "name": "Custom Banner"
    }
  ]
}
{% endschema %}
