<div class="bann-wrapper banner-slider ">


  {% if section.blocks !=blank %}

  {%- for block in section.blocks -%}
  <div class="banner inner-banner" style="background-image: url({% if block.settings.banner_img !=blank %}{{ block.settings.banner_img | img_url: 'master' }} {% else %}{{ 'inner-new-banner.jpg' | asset_url }}{% endif %});">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-12 col-lg-12">
          <div class="banner-content">
            {% if section.settings.page_title !=blank %}
              <h2>{{ section.settings.page_title }}</h2>
            {% else %}
              <h2>{{- collection.title | escape -}}</h2>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </div>
{%- endfor -%}
{% else %}
<div class="banner inner-banner" style="background-image: url({% if section.settings.banner_img !=blank %}{{ section.settings.banner_img | img_url: 'master' }} {% else %}{{ 'inner-new-banner.jpg' | asset_url }}{% endif %});">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-12 col-lg-12">
        <div class="banner-content">
          {% if section.settings.page_title !=blank %}
            <h2>{{ section.settings.page_title }}</h2>
          {% else %}
            <h2>{{- collection.title | escape -}}</h2>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>
{% endif %}


</div>


