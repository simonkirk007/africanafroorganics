<div class="banner inner-banner" style="background-image: url({% if section.settings.banner_img !=blank %}{{ section.settings.banner_img | img_url: 'master' }} {% else %}{{ 'homepage banner.jpg' | asset_url }}{% endif %});">
  <div class="container">
      <div class="row align-items-center">
          <div class="col-12 col-lg-12">
              <div class="banner-content">
                {% if section.settings.page_title !=blank %}
                  <h2>{{ section.settings.page_title }}</h2>
                {% else %}
                  <h2>{{- collection.title | escape -}}</h2>
                {% endif %}
              </div>
          </div>
      </div>
  </div>
</div>


{% schema %}
{
  "name": "t:sections.main-collection-banner.name",
  "class": "section",
  "settings": [
    {
      "type": "paragraph",
      "content": "t:sections.main-collection-banner.settings.paragraph.content"
    },
    {
      "type": "text",
      "id": "page_title",
      "label": "Page Title"
    },
    {
      "type": "image_picker",
      "id": "banner_img",
      "label": "Banner Image"
    }
    
    
  ]
}
{% endschema %}
